<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.arif.movieDB">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="dev.arif.movieDB.FliqApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:largeHeap="true"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieApp">
        <activity
            android:name="dev.arif.movieDB.ui.activity.LoginActivity"
            android:exported="true" />
        <activity
            android:name="dev.arif.movieDB.ui.activity.SignUpActivity"
            android:exported="true" />
        <activity
            android:name="dev.arif.movieDB.ui.activity.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="dev.arif.movieDB.ui.activity.SeeAllMovieActivity" />
        <activity
            android:name="dev.arif.movieDB.ui.activity.YoutubeVideoPlayerActivity"
            android:screenOrientation="landscape" />
        <activity android:name="dev.arif.movieDB.ui.activity.MovieDetailsActivity" />
        <activity android:name="dev.arif.movieDB.ui.activity.MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>